 {
  "title": "arrow-keys",
  "rules": [
    {
      "description": "allows you to emulate arrow keys on a 60% keyboard.",
      "manipulators": [
        {
            "type": "basic",
            "from": {
                "key_code": "i",
                "modifiers": {
                    "mandatory": [
                        "right_shift"
                    ],
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [
                {
                    "key_code": "up_arrow"
                    
                }
            ]
        },
        {
            "type": "basic",
            "from": {
                "key_code": "j",
                "modifiers": {
                    "mandatory": [
                        "right_shift"
                    ],
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [
                {
                    "key_code": "left_arrow"
                    
                }
            ]
        },
        {
            "type": "basic",
            "from": {
                "key_code": "l",
                "modifiers": {
                    "mandatory": [
                        "right_shift"
                    ],
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [
                {
                    "key_code": "right_arrow"
                    
                }
            ]
        },
        {
            "type": "basic",
            "from": {
                "key_code": "k",
                "modifiers": {
                    "mandatory": [
                        "right_shift"
                    ],
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [
                {
                    "key_code": "down_arrow"
                    
                }
            ]
        }
      ]
    }
  ]
}
